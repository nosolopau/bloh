<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :blog_id, :class => 'control-label' %>
    <%= f.collection_select :blog, current_user.blogs, :id, :title, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, class: 'control-label' %>
    <%= f.text_area :content, rows: 10, class: 'form-control' %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")), posts_path, class: 'btn btn-default' %>

<% end %>
